{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "material-datatable": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/material-datatable",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["@angular/material/prebuilt-themes/azure-blue.css", "src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "material-datatable:build:production"
            },
            "development": {
              "buildTarget": "material-datatable:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["@angular/material/prebuilt-themes/azure-blue.css", "src/styles.scss"],
            "scripts": []
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "material-datatable-lib:build",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", ".", "-p", "projects/material-datatable/tsconfig.lib.json"],
            "port": 6006,
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "@fontsource/roboto/300.css",
              "@fontsource/roboto/400.css",
              "@fontsource/roboto/500.css",
              "@fontsource/roboto/700.css",
              "@fontsource/material-icons",
              "projects/material-datatable/src/styles.scss"
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "material-datatable-lib:build",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", ".", "-p", "projects/material-datatable/tsconfig.lib.json"],
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "@fontsource/roboto/300.css",
              "@fontsource/roboto/400.css",
              "@fontsource/roboto/500.css",
              "@fontsource/roboto/700.css",
              "@fontsource/material-icons",
              "projects/material-datatable/src/styles.scss"
            ],
            "outputDir": "storybook-static"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    },
    "material-datatable-lib": {
      "projectType": "library",
      "root": "projects/material-datatable",
      "sourceRoot": "projects/material-datatable/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/material-datatable/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/material-datatable/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/material-datatable/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/material-datatable/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["angular-eslint"]
  }
}
